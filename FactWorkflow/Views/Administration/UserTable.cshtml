@{
    ViewData["Title"] = "Список користувачів";
    @model IEnumerable<FactWorkflow.Models.User>;
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <span>Адміністрування</span>
            </li>
            <li class="breadcrumb-item">Користувачі</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Таблиця користувачів
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ім'я</th>
                                <th>Пошта</th>
                                <th>Роль</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Ім'я</th>
                                <th>Пошта</th>
                                <th>Роль</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UName</td>
                                    <td>@item.UMail</td>
                                    <td>@Html.DisplayFor(modelItem => item.Role.RAlterName)</td>
                                    <!--- <td align="center"><a href="~/Administration/DeleteUser/@item.UId"><i class="fa fa-trash bigger-130 padding-2 grey"></i></a></td>
                                    <td align="center"><a href="~/Administration/EditUser/@item.UId"><i class="fa fa-pen bigger-130 padding-2 grey"></i></a></td> --->
                                    <td align="center"><a data-toggle="modal" href="#deleteModal" id="@item.UId" onclick="openModal(this)"><i class="fa fa-trash bigger-130 padding-2 grey"></i></a></td>
                                    <td align="center"><a href="~/Administration/EditUser/@item.UId"><i class="fa fa-pen bigger-130 padding-2 grey"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2018</span>
            </div>
        </div>
    </footer>

    <div style="display:none;" id="modalWrapper">
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ви дійсно бажаєте видалити користувача?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Виберіть "Видалити" для того, щоб підтвердити дію.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Відміна</button>
                    <a class="btn btn-danger" id="deleteButton" href="~/Administration/DeleteUser/">Видалити</a>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script src="~/js/UserTable.js"></script>
</div>
<!-- /.content-wrapper -->