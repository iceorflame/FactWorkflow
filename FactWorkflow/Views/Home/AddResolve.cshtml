@{
    ViewData["Title"] = "Tokens";
    @model FactWorkflow.Models.Resolve;
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~Home/Index">Головна</a>
            </li>
            <li class="breadcrumb-item active">Додати резолюцію</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Резолюція
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="col-lg-6">
                        <form role="form" enctype="multipart/form-data" method="post">
                            @Html.HiddenFor(model => model.DId)
                            <div class="form-group">
                                <label asp-for="RAddress">Індекс</label>
                                <input asp-for="RAddress" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="RAddress">Дата надходження</label>
                                <input asp-for="RAddress" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="RAddress">Кореспондент</label>
                                <input asp-for="RAddress" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="RAddress">Короткий зміст</label>
                                <input asp-for="RAddress" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="RAddress">Резолюція</label>
                                <input asp-for="RAddress" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-default">Додати резолюцію</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2018</span>
            </div>
        </div>
    </footer>

</div>