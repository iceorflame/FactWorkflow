@{
    ViewData["Title"] = "Tokens";
    @model FactWorkflow.Models.AddResolve;
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~Home/Index">Головна</a>
            </li>
            <li class="breadcrumb-item active">Додати резолюцію</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Інформація про документ
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th width="15%">Номер документа</th>
                                <td>@Html.DisplayFor(model => model.History.DId)</td>
                            </tr>
                            <tr>
                                <th width="15%">Індекс</th>
                                <td>@Html.DisplayFor(model => model.History.Document.DIndex)</td>
                            </tr>
                            <tr>
                                <th width="15%">Дата отримання</th>
                                <td>@Html.Raw(Model.History.Document.DDate.ToString("dd.MM.yyyy"))</td>
                            </tr>
                            <tr>
                                <th width="15%">Коресподент</th>
                                <td>@Html.DisplayFor(model => model.History.Document.DFrom)</td>
                            </tr>
                            <tr>
                                <th width="15%">Короткий зміст</th>
                                <td>@Html.DisplayFor(model => model.History.Document.DAbout)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Резолюція
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="col-lg-6">
                        <form role="form" enctype="multipart/form-data" method="post">
                            @Html.HiddenFor(model => model.History.Hid)
                            @Html.HiddenFor(model => model.History.HAddress)
                            @Html.HiddenFor(model => model.History.UId)
                            @Html.HiddenFor(model => model.History.TId)
                            <div class="form-group">
                                <label asp-for="Resolve.RText">Резолюція</label>
                                <textarea asp-for="Resolve.RText" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-default">Додати резолюцію</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2018</span>
            </div>
        </div>
    </footer>

</div>