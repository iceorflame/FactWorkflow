@{
    ViewData["Title"] = "Users";
    @model IEnumerable<FactWorkflow.Models.History>;
    int documentid = 0;

}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Головна</a>
            </li>
            <li class="breadcrumb-item active">Документи</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Список документів
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Індекс</th>
                                <th>Дата</th>
                                <th>Кореспондент</th>
                                <th>Зміст</th>
                                <th>Тип</th>
                                <th>Адресат</th>
                                <th>Статус</th>
                                <th>Виконати до</th>
                                <th>Відповідальний</th>
                                <th>Оригінал?</th>
                                <th>Документ</th>
                                <th width="8%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DId</td>
                                    <td>@item.Document.DIndex</td>
                                    <td>@item.Document.DDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.Document.DFrom</td>
                                    <td>@item.Document.DAbout</td>
                                    <td>@item.Type.TName</td>
                                    <td>@item.HAddress</td>
                                    <td>@item.Status.SName</td>
                                    @if (item.HDate != null)
                                    {
                                        <td align="center">@item.HDate.Value.ToString("dd.MM.yyyy")</td>
                                    }
                                    else
                                    {
                                        <td align="center"><i class="fa fa-times"></i></td>
                                    }
                                    @if (item.HResponsible == true)
                                    {
                                        <td align="center"><i class="fa fa-check"></i></td>
                                    }
                                    else
                                    {
                                        <td align="center"><i class="fa fa-times"></i></td>
                                    }
                                    @if (item.HOriginal == true)
                                    {
                                        <td align="center"><i class="fa fa-check"></i></td>
                                    }
                                    else
                                    {
                                        <td align="center"><i class="fa fa-times"></i></td>
                                    }
                                    <td><a href="~/Home/Download/@item.Document.FId">@Html.DisplayFor(modelItem => item.Document.File.FName)</a></td>
                                    @if (item.SId == 7)
                                    {
                                        <td>
                                            <div class="btn-group-vertical">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" style="text-decoration: none;">
                                                        Керування
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="~/Home/ApplyWork?did=@item.DId">Підтвердити виконання</a>
                                                        <!--  <a class="dropdown-item" href="">Дія 1</a> -->
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2018</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/tableLanguage.js"></script>

</div>
<!-- /.content-wrapper -->